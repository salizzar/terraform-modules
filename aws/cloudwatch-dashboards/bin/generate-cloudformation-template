#! /usr/bin/env bash

set -xe


# IMPORTANT:
# when this script is invoked, the current path is not accessible in a easy way...
# so you need to access the cdk source code folder by this form
# instead of ../src

CDK_SRC="`pwd`/`dirname $0`/../src"
CDK_PATH=`sed 's/\ /\\ /g' <<< "$CDK_SRC"`


#
# look for npm errors
#
NPM_OUTPUT=`cd "$CDK_PATH" && npm install`
NPM_EXIT_CODE=$?

if [[ $NPM_EXIT_CODE -ne 0 ]] ; then
  echo "{\"error\":\"$NPM_OUTPUT\"}"
  exit 1
fi


#
# look for cdk errors
#
CDK_OUTPUT=`cdk synth`
CDK_EXIT_CODE=$?

if [[ $CDK_EXIT_CODE -ne 0 ]] ; then
  jq -n --arg cdk_output "$CDK_OUTPUT" '{"error":$cdk_output}' 1>&2
  exit 1
fi


#
# if everything is OK return CDK output
#
jq -n --arg cdk_output "$CDK_OUTPUT" '{"cloudformation_template":$cdk_output}'
